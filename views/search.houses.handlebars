<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Selling Later</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<header>
  <a href="/">
  <img alt="Selling Later" src="/images/logo.png"
    width="150" height="70">
  </a>
  <ul class = "nav-bar">
    <li><a href="default.asp">View Homes</a></li>
    <li><a href="default.asp">Save</a></li>
    <li><a href="default.asp">How It Works</a></li>
    <li><a href="default.asp">Learn</a></li>
    <li><a href="default.asp">Stories</a></li>
  </ul>
 <button onclick="openLoginForm()">Sign In</button>
 <button onclick="openRegisterForm()">Sign Up</button>
</header>

<div class = "searchbar">
  <input id="city" type="text" placeholder="Search a city..">
  <button id="city-search-submit" class="button">Search</button>
  <div class="dropdown">
    <button class="dropbtn">Price</button>
    <div class="dropdown-price">
      <p id="price1">$300,000-$449,999</p>
      <p id="price2">$450,000-$599,999</p>
      <p id="price3">$600,000-$749,999</p>
      <p id="price4">$750,000-$899,999</p>
      <p id="price5">$900,000-$1,049,999</p>
      <p id="price6">$1,050,000+</p>
    </div>
  </div>
  <button id="price-search-submit" class="button">Search</button>
</div>

<div class ="hpost-container">
  <ol class="hpost-list">
    {{#each hposts as |hpost|}}
    <li>
      {{> hpost-info hpost }}
    </li>
    {{/each}}
  </ol>
</div> 

<footer>
  <a href="/">
  <img alt="Selling Later" src="/images/logo.png"
    width="150" height="70">
  </a>
  <div class = "signup-bar">   
</footer>

<script src="/javascript/login.js"></script>
<script src="/javascript/register.js"></script>